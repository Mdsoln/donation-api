-- Update existing hospitals with coordinates (example values for Dar es Salaam)
UPDATE hospitals SET 
  latitude = CASE hospital_id
    WHEN 1 THEN -6.8031  -- Muhimbili
    WHEN 2 THEN -6.803487  -- Aga Khan
    WHEN 3 THEN -6.8213  -- Tumaini
    WHEN 4 THEN -6.7872  -- Mwananyamala
    WHEN 5 THEN -6.869  -- Temeke
    WHEN 6 THEN -6.8269  -- Amana
  END,
  longitude = CASE hospital_id
    WHEN 1 THEN 39.2726
    WHEN 2 THEN 39.287841
    WHEN 3 THEN 39.28148
    WHEN 4 THEN 39.253
    WHEN 5 THEN 39.2667
    WHEN 6 THEN 39.26022
  END;